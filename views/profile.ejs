<style>
    body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    margin: 0;
    padding: 0;
}

.dashboard {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    background-color: white;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
}

.user-details {
    text-align: center;
    margin-bottom: 20px;
}

h1 {
    font-size: 24px;
}

.user-info {
    display: flex;
    align-items: center;
}

img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 20px;
}

.info {
    text-align: left;
}

p {
    margin: 5px 0;
}

/* Add these styles to style the table */
.attendance-table {
    margin-top: 20px;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 10px;
}

thead {
    background-color: var(--main-color);
    color: white;
}

th, td {
    padding: 10px;
    text-align: center;
    border: 1px solid #ddd;
}

tbody tr:nth-child(even) {
    background-color: #f2f2f2;
}


</style>
<body>
    <%- include("./partials/navbar.ejs")%>
    <div class="dashboard">
        <div class="user-details">
            <h1>Student Dashboard</h1>
            <div class="user-info">
